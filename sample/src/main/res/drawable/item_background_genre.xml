<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused & Selected (Checked): Accent background, No Border (Clean look) -->
    <item android:state_focused="true" android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <solid android:color="@color/color_accent"/>
        </shape>
    </item>

    <!-- Focused: Lighter Gray background + White Border -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <solid android:color="#555555"/>
            <stroke android:width="2dp" android:color="#FFFFFF"/>
        </shape>
    </item>

    <!-- Selected (Checked): Accent background, No border -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <solid android:color="@color/color_accent"/>
        </shape>
    </item>

    <!-- Default: Dark Gray background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <solid android:color="#333333"/>
        </shape>
    </item>
</selector>
