<tv.projectivy.plugin.wallpaperprovider.sample.CheckableFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_margin="4dp"
    android:background="@drawable/item_background_genre"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clipToOutline="true"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/genre_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="1" />
</tv.projectivy.plugin.wallpaperprovider.sample.CheckableFrameLayout>
