<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.butch708.projectivy.tvbgsuite"
    tools:ignore="MissingLeanbackLauncher">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />

    <queries>
        <package android:name="com.spocky.projengmenu" />
        <package android:name="org.moonfin.androidtv" />
    </queries>

    <application
        android:allowBackup="true"
        android:label="@string/plugin_name"
        android:supportsRtl="true"
        android:icon="@mipmap/ic_launcher"
        android:banner="@mipmap/ic_banner"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.ProjectivyWallpaperProvider">

        <activity
            android:name="tv.projectivy.plugin.wallpaperprovider.sample.SettingsActivity"
            android:exported="true"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>

        <activity-alias
            android:name=".ProjectivySettingsAlias"
            android:enabled="true"
            android:exported="true"
            android:targetActivity="tv.projectivy.plugin.wallpaperprovider.sample.SettingsActivity" />

        <!-- ContentProvider ONLY for Idle Mode Changed (16) -->
        <provider
            android:name="tv.projectivy.plugin.wallpaperprovider.sample.WallpaperProvider"
            android:authorities="com.butch708.projectivy.tvbgsuite.wallpaper"
            android:exported="true">
            <meta-data
                android:name="updateMode"
                android:value="16" />
            <meta-data
                android:name="tv.projectivy.launcher.wallpaper.updateMode"
                android:value="16" />
            <meta-data
                android:name="itemsCacheDurationMillis"
                android:value="0"/>
        </provider>

        <!-- Wallpaper Provider Service ONLY for Time Elapsed (1) -->
        <service
            android:name="tv.projectivy.plugin.wallpaperprovider.sample.WallpaperProviderService"
            android:exported="true"
            android:label="@string/plugin_name"
            android:icon="@mipmap/ic_launcher"
            android:banner="@mipmap/ic_banner"
            tools:ignore="ExportedService">

            <intent-filter>
                <action android:name="tv.projectivy.plugin.WALLPAPER_PROVIDER"/>
            </intent-filter>

            <meta-data
                android:name="apiVersion"
                android:value="1"/>

            <meta-data
                android:name="uuid"
                android:value="@string/plugin_uuid"/>

            <meta-data
                android:name="name"
                android:value="@string/plugin_name"/>

            <meta-data
                android:name="settingsActivity"
                android:value=".ProjectivySettingsAlias"/>

            <meta-data
                android:name="authority"
                android:value="com.butch708.projectivy.tvbgsuite.wallpaper"/>

            <meta-data
                android:name="itemsCacheDurationMillis"
                android:value="1000"/>

            <meta-data
                android:name="updateMode"
                android:value="1"/>
            <meta-data
                android:name="tv.projectivy.launcher.wallpaper.updateMode"
                android:value="1" />
        </service>

    </application>

</manifest>